{
  "compilerOptions": {
    "declaration": false,
    "emitDeclarationOnly": false,
    "esModuleInterop": false,
    "experimentalDecorators": false,
    "lib": [
      "dom",
      "ES6"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es6"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
